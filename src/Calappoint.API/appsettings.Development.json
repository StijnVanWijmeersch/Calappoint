{
    "ConnectionStrings": {
        "Database": "Data Source=calappoint.database,1433;Initial Catalog=calappointdb;User ID=sa;Password=calappoint@123;TrustServerCertificate=True"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.Seq"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "Seq",
                "Args": { "serverUrl": "http://calappoint.seq:5341" }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "Calappoint.Api"
        }
    }
}
